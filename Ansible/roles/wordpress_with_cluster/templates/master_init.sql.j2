CREATE DATABASE IF NOT EXISTS {{ db_name }};

-- Создание пользователя без SSL
CREATE USER IF NOT EXISTS '{{ replication_user }}'@'%' IDENTIFIED BY '{{ replication_password }}' REQUIRE NONE;

-- Выдаём права на репликацию
GRANT REPLICATION SLAVE ON *.* TO '{{ replication_user }}'@'%';

-- Применяем изменения
FLUSH PRIVILEGES;